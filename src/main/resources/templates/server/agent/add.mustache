		</div>
	</div>
</div>

{{>layout/footer}}

<script>
	const url = '/server/agent';
	
	
	//에이전트 등록
	const agentAdd = function () {

		if(confirm('등록 하시겠습니까?')) {
			
		    if($("#code_nm").val() == '') {
		        alert('파라미터명을 입력하세요!');
		        $("#code_nm").focus();
		        return;
		    }
		    if($("#code").val() == '') {
		        alert('정의를 입력하세요!');
		        $("#code").focus();
		        return;
		    }
		    if($("#local_code").val() == '') {
		        alert('등록가이드를 입력하세요!');
		        $("#local_code").focus();
		        return;
		    }
		    if($("#local_code_nm").val() == '') {
		        alert('사용 용도를 선택하세요!');
		        $("#local_code_nm").focus();
		        return;
		    }
		    
		    const data = {
		   		url: '/agent/add',
		   		code_nm: $("#code_nm").val(),	
		   		code: $("#code").val(),	
		   		local_code: $("#local_code").val(),	
		   		local_code_nm: $("#local_code_nm").val(),	
		   		user_id: 'user00',
		    };		
		    $.ajax({
		        type: 'POST',
		        url: url+'/agentAdd',
		        dataType: 'json',
		        contentType: 'application/json; charset-utf-8',
		        data: JSON.stringify(data)
		    }).done(function (data) {
		    	
			  	  if (data != null) {
				  		let message = JSON.stringify(data.return_msg);
				  		alert(message.replace(/\"/gi, ''));
				  		listPage();
			  	  }
		    	  
		    }).fail(function (error) {
		        alert(JSON.stringify(error));
		    });	
		}
	}	
	
	//리스트 화면
	const listPage = function () {
		location.href = url+'/list';
	}	
</script>

