				  	   	$("#log_desc_txt").text(data.contents[0].log_desc);
				  	   	$("#st_datamodel_txt").text(data.contents[0].st_datamodel);
				  	   	$("#data_before_txt").text(data.contents[0].data_before);
			  	   	}
		  	  }
	    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });			
}

