<script>

const commonUrl = '/common';
const url = '/dataSet';

let init_page = 1;				//초기 페이지
let page = 1;					//페이지
let init_size_per_page = 10;	//초기 개수
let size_per_page = 10;	 		//가져올 개수
let pageCount = 10;		 		//페이징에 나타낼 페이지 수

//분류 조회(검색 영역)
const dpCmCategory = function (clsf_type, clsf_id) {
	
	let paramStr = '';
	if(clsf_id){
		paramStr = 'clsf_id='+clsf_id;
	}
	
	const data = {
   		url: '/dp/cm/category?'+paramStr,
    };
	
    $.ajax({
        type: 'POST',
        url: commonUrl+'/dpCmCategory',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		  
    		  if(errorMsg(data)){
   	          	 return;  
       	  	  }				
	  		
	  		 if(clsf_type == '1'){	//대분류 선택시
		  		$("#m_clsf option:gt(0)").remove();
		  		$("#s_clsf option:gt(0)").remove();
		  	  }else if(clsf_type == '2'){	//중분류 선택시
		  		$("#s_clsf option:gt(0)").remove();
		  	  }else if(clsf_type == '3'){	//소분류 선택시
		  	  }else{	//초기 호출
		  		$("#l_clsf option:gt(0)").remove();
		  		$("#m_clsf option:gt(0)").remove();
		  		$("#s_clsf option:gt(0)").remove();
		  	  }
  	    	if(data.contents != ""){
  	    		let insertTr = '';
		  	    $.each(data.contents, function (idx, el) {
		  	    	insertTr += '<option value="'+el.clsf_id+'">'+el.clsf_nm+'</option>';
		  	    });
		  	  if(clsf_type == '1'){	//대분류 선택시
		  		if(clsf_id){
		  	  		$("#m_clsf").append(insertTr);
		  		}
		  	  }else if(clsf_type == '2'){	//중분류 선택시
		  		if(clsf_id){
		  			$("#s_clsf").append(insertTr);
		  		}
		  	  }else if(clsf_type == '3'){	//소분류 선택시
		  	  }else{
		  		$("#l_clsf").append(insertTr);
		  	  }
  	    	}
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//검색 유형 선택에 따라서 검색
const dpLoadDset = function (page, size_per_page) {
	
	if(!page){
		page = init_page;
	}
	if(!size_per_page){
		size_per_page = init_size_per_page;
	}	
	
	let search_type = $("#search_type").val();
	let query = isEmpty($("#query").data("search"));
	let l_clsf = $("#l_clsf").val();
	let m_clsf = $("#m_clsf").val();
	let s_clsf = $("#s_clsf").val();
	
	$("#query").val(query);	//검색어 갱신(검색버튼 클릭시)
	
	const data = {
   		url: '/dp/load/dataset',
   		user_id: 'user00',	
   		search_type: search_type,
   		search: query,
   		dset_lclas: l_clsf,
   		dset_mclas: m_clsf,
   		dset_sclas: s_clsf,
   		page_current: String(page),
    };
	
    $.ajax({
        type: 'POST',
        url: url+'/dpLoadDset',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		  
    		  if(errorMsg(data)){
   	          	 return;  
       	  	  }				
	  		
	  		$("#datasetList").empty();
	  		$("#total_count").text(data.totalcount);
  	    	if(data.contents != ""){
  	    		let insertTr = '';
		  	    $.each(data.contents, function (idx, el) {
		  	    	
		  	    	insertTr += '<tr>';
		  	    	insertTr += '	<td><span class="blue bold" style="cursor:pointer" onclick="btnDetail(\''+el.table_idntfc_id+'\');">'+isEmpty(el.dset_korean_nm)+'</span></td>';
		  	    	insertTr += '	<td>'+isEmpty(el.clct_mthd)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.clct_ty)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.dset_lclas)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.dset_mclas)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.dset_sclas)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.table_korean_nm)+'</td>';
		  	    	insertTr += '	<td><button class="btn btn-success btn-sm mx-0" type="button" onclick="btnMetaDetail(\''+el.dset_idntfc_id+'\');">바로가기</button></td>';
		  	    	insertTr += '	<td>'+isEmpty(el.ingest_count)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.load_count)+'</td>';
		  	    	insertTr += '	<td>'+isEmpty(el.error_count)+'</td>';
		  	    	insertTr += '</tr>';
		  	    });
		  	  $("#datasetList").html(insertTr);
  	    	}
  	    	//페이징 보여줌
  	    	paging(data.totalcount, size_per_page, pageCount, page);
	  	  }
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

//검색 버튼
const btnSearch = function(){
	let query = $("#query").val();
	$("#query").data("search", query);
	dpLoadDset();
}

//데이터셋 상세 조회
const btnDetail = function (table_idntfc_id) {
	location.href = url+'/detail/'+table_idntfc_id;
}

//메타정보 상세 조회
const btnMetaDetail = function (dset_idntfc_id) {
	location.href = url+'/metaDetail/'+dset_idntfc_id;
}

//페이징 함수 호출
const pagingFun = function(page, size_per_page){
	dpLoadDset(page, size_per_page);
}

//엔터키가 눌렸을 때
const enterkey = function(e) {
	if (e.keyCode == 13) {
		btnSearch();
    }
}

//분류 조회
dpCmCategory();

dpLoadDset();

</script>

