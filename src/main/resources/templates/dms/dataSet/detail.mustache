const strToObject = function(str){
	let obj = {};
	const except = ['\t', '{', '}'];
	for(let i=0; i < except.length; i++){
		str = str.replaceAll(except[i],'');
	}
	if(str.indexOf(",") > -1){
		let arr = str.split(",");
		for(let i=0; i < arr.length; i++){
			let key = arr[i].split(":")[0];
			let val = arr[i].split(":")[1];
			obj[key] = val;
		}
	}
	
	return obj;
}

