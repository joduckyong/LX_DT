//쿼리 생성
const createQuery = function(){
	
	$("#sqlText").val('');
	
	if(validationCheck()){
		let svrData = getSvrData();
		let cndData = getCndData();
		let sortData = getSortData();
		
// 		let noTotFncArr = [];	//집합함수 미체크 항목 리스트
		
		let sqlText = '';
		let noTotFncSql = '';
		let groupByStr = ' GROUP BY';
		if(svrData.length > 0){
			
			sqlText += 'SELECT' + '\n';
			for(let i=0; i<svrData.length; i++){
				if(svrData[i]['totFncYn'] == 'Y'){		//집합함수 사용
					sqlText += ' ' + svrData[i]['totFncCd'] + '(' + svrData[i]['colEng'] + ')' + ' as ' + svrData[i]['srvColNm'];
				}else{
					sqlText += ' ' + svrData[i]['colEng'] + ' as ' + svrData[i]['srvColNm'];
					noTotFncSql += ' ' + svrData[i]['colEng'];
					noTotFncSql += ',';
// 					noTotFncArr.push(svrData[i]['colEng']);
				}
				
				if(i != svrData.length-1){
					sqlText += ',';
				}
				sqlText += '\n';
			}
			
			sqlText += ' FROM ' + svrData[0]['tbl'] + '\n';
			sqlText += ' WHERE 1=1' + '\n';
		}
		
		if(cndData.length > 0){
			let fromToSql = '';
			for(let i=0; i<cndData.length; i++){
				if(cndData[i]['cnd'].indexOf('From_To') > -1){
					if(cndData[i]['cnd'] == 'From_To(From)'){
						fromToSql += ' AND ' + cndData[i]['targetCol'] + ' BETWEEN ' + '#{' +cndData[i]['cndNm'] + '}';
					}else if(cndData[i]['cnd'] == 'From_To(TO)'){
						fromToSql += ' AND ' + '#{' +cndData[i]['cndNm'] + '}';
						fromToSql += '\n';
					}
				}else{
					sqlText += ' AND ' + cndData[i]['targetCol'] + ' ' + cndData[i]['cnd'] + ' ' + '#{' +cndData[i]['cndNm'] + '}';
					sqlText += '\n';
				}
				
			}
			
			sqlText += fromToSql;
		}
		
		if(sortData.length > 0){
// 			let noTotFncSql = '';
// 			let groupByStr = '';
			let orderBySql = '';
			orderBySql += ' ORDER BY';
			
			for(let i=0; i<sortData.length; i++){
				orderBySql += ' ' + sortData[i]['colEng'] + ' ' + sortData[i]['sortMethod'];
				if(i != sortData.length-1){
					orderBySql += ',';
				}
				orderBySql += '\n';
				
// 				if(noTotFncArr.includes(sortData[i]['colEng'])){
// 					groupByStr = ' GROUP BY';
// 					noTotFncSql += ' ' + sortData[i]['colEng'] + ' ' + sortData[i]['sortMethod'];
// 					noTotFncArr = noTotFncArr.filter((el) => el !== sortData[i]['colEng']);
// 					noTotFncSql += ',';
// 				}
			}
			
			if(noTotFncSql.indexOf(',') > -1){	//마지막 콤마 제거
				noTotFncSql = noTotFncSql.substring(0, noTotFncSql.length-1);
			}
			noTotFncSql += '\n';
			
			sqlText += groupByStr + noTotFncSql + orderBySql;
		}
		
	// 	console.log(sqlText);
		$("#sqlText").val(sqlText);
	}
	
}

