const distributeSetupPopupSrvTargetReg = function(){
	
	let dataset = new Array();
	$("#popupList > tr").each(function(idx, el){
		let pop_ctprvnCd = $(this).find('td.pop_ctprvnCd > select').val();
		let pop_signguCd = $(this).find('td.pop_signguCd > select').val();
		let pop_srvkey = $(this).find('td.pop_srvkey > input').val();
		let obj ={
			ctprvnCd : pop_ctprvnCd,
			signguCd : pop_signguCd,
			srvkey : pop_srvkey,
			
		}
		dataset.push(obj);
	});
	
	const data = {
   		url: '/services/distribute/setup/popup/srv/target/reg',
   		userId: 'user00',
   		data: dataset,
    };
	
	if(confirm("등록 하시겠습니까?")){
	    $.ajax({
	        type: 'POST',
	        url: url+'/distributeSetupPopupSrvTargetReg',
	        dataType: 'json',
	        contentType: 'application/json; charset=utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
	    	
		  	  if (data != null) {
		  		  
		  		errorMsg(data);
		  		
	  	    	if(data.contents != ""){
	  	    		targetList = data.contents;
	  	    		closeModal();
	  	    	}
		  	  }
	    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });
	}
}

