   		schema: schema,
   		tbl: query,
    };
	
    $.ajax({
        type: 'POST',
        url: url+'/distributeSetupSchemaTblList',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		  
